{
  "manifest_version": 2,

  "name": "Word Finder",
  "description": "This extension finds a given word in the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
      "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches":["http://*/*", "https://*/*"],
      "js":["content.js"]
    }
  ]
}
